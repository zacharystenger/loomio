.container#contact_message
  %section.first
    .inner-container
      - if hosted_by_loomio?
        %h1= t(:"contact_page.contact_us")
        %p= t(:"contact_page.faq_prompt_html")
        %p= t(:"contact_page.contact_information")
        = render 'help/faq'
      .row
        .col-md-12#contact_form
          %h1= t(:"contact_page.contact_form")
      .row
        .col-md-5
          = simple_form_for @contact_message, :defaults => {:required => true}, :validate => true do |f|
            = f.input :name, label: t(:"contact_page.labels.name")
            = f.input :email, label: t(:"contact_page.labels.email")
            = f.input :message, label: t(:"contact_page.labels.message")
            = f.submit :submit, value: t(:"contact_page.labels.submit"), class: 'btn btn-info btn-lg', data: { disable_with: t(:"contact_page.labels.submit") }
        .col-md-5.offset1#direct_contact
          - if hosted_by_loomio?
            %p= t(:"contact_page.messages.email_html", email: "contact@loomio.org")
            %p= t(:"contact_page.messages.social_html", facebook: "https://www.facebook.com/Loomio", twitter: "https://twitter.com/Loomio", google: "https://plus.google.com/+LoomioOrg")